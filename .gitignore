                let currentBlock = 0;
    const formBlocks = document.querySelectorAll('.form-block');

    function nextBlock() {
        if (currentBlock < formBlocks.length - 1) {
            formBlocks[currentBlock].classList.remove('active');
            currentBlock++;
            formBlocks[currentBlock].classList.add('active');
        }

    }

    function prevBlock() {
        if (currentBlock > 0) {
            formBlocks[currentBlock].classList.remove('active');
            currentBlock--;
            formBlocks[currentBlock].classList.add('active');
        }
    }

    function toggleFields() {
        const financiamentoFields = document.getElementById('financiamentoFields');
        const creditoSim = document.querySelector('input[name="credito"][value="sim"]');


        if (creditoSim.checked) {
            financiamentoFields.style.display = 'block';
        } else {
            financiamentoFields.style.display = 'none';
        }
    }

    const vistoriaInput = document.getElementById('vistoria_num');
    const vistoriaCustoContainer = document.getElementById('vistoria_custo_container');

    vistoriaInput.addEventListener('input', function() {
        if (vistoriaInput.value > 0) {
            vistoriaCustoContainer.style.display = 'block';
        } else {
            vistoriaCustoContainer.style.display = 'none';
        }
    });

    // Função para gerenciar as etapas
    document.querySelectorAll('.btn-next').forEach(button => {
        button.addEventListener('click', function() {
            const currentStep = button.parentElement;
            const nextStepId = button.getAttribute('data-next');
            const nextStep = document.getElementById(`etapa${nextStepId}`);

            // Esconde a etapa atual e exibe a próxima
            currentStep.style.display = 'none';
            nextStep.style.display = 'block';

            // Atualiza os spans de progresso
            updateProgressBar(nextStepId);
        });
    });

    function updateProgressBar(stepNumber) {
        // Adiciona a classe 'active' a todos os spans até a etapa atual
        document.querySelectorAll('.progress-step').forEach((step, index) => {
            if (index < stepNumber) {
                step.classList.add('active'); // Adiciona a classe para spans anteriores
            } else {
                step.classList.remove('active'); // Remove a classe para spans futuros
            }
        });
    }

    // Inicia com o primeiro span ativo
    updateProgressBar(1);

    document.querySelectorAll('.btn-next').forEach(button => {
        button.addEventListener('click', function() {
            const nextStep = this.getAttribute('data-next');

            // Verifica se está indo para a etapa 6 ou maior
            if (nextStep >= 6) {
                // Altera o título para "Custos Variáveis"
                document.getElementById('titulo-custos').innerText = 'CUSTOS VARIÁVEIS';

                // Reinicia a contagem da barra de progresso
                document.getElementById('step1').innerText = '1';
                document.getElementById('step2').innerText = '2';
                document.getElementById('step3').innerText = '3';
                document.getElementById('step4').innerText = '4';
                document.getElementById('step5').innerText = '5';
            }
        });
    });














    
